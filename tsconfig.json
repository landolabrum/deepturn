{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false, // Allow case-insensitive imports
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "paths": {
      "@ui/*": ["src/modules/ui/*"],
      "@webstack/*": ["src/webstack/*"],
      "@shared/*": ["src/modules/shared/*"],
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "*": ["*"] // Treat all paths as case-insensitive
    },
    "types": [],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [ "src/**/*", "typings.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "sass-plugin.ts"],
  "exclude": ["node_modules"]
}
